footer.footer.footer_style_default
    section.footer-information.flex
        section.schedule-address-panel.footer-information__item
            article.schedule.flex.column.flex-center
                h2.schedule__header.page-header Графік роботи:
                div.schedule__days-panel.column
                    - var days = ['Понеділок ', 'Вівторок ', 'Середа ', 'Четвер ', 'П\'ятниця ', 'Субота ', 'Неділя '];
                     - var hours = [ ['09', '20'], ['09', '20'], ['09', '20'], ['09', '20'], ['09', '20'], ['10', '18'], ['10', '18'] ];
                    for day, dayNumber in days
                        span.schedule__certain-day-schedule
                            span.schedule__day-name.pale-text=day
                            time.schedule__working-hours=hours[dayNumber][0]
                                sup 00
                                = - hours[dayNumber][1]
                                sup 00
            article.address.flex.column.flex-center
                h2.address__header.page-header Адреса:
                span.address__street.
                    площа Ринок, 9
                span.address__city.pale-text.
                    м. Львів, 79008
        section.contacts.flex.column.flex-center.footer-information__item
            h2.contacts__header Контакти
            span.contacts__phone-number
                span.pale-text 032 
                | 235 66 84
            span.contacts__phone-number
                span.pale-text 032 
                | 235 60 18
            div.contacts__links-wrapper.flex
                a.contacts__link.contacts__facebook-link.page-link(href="https://www.facebook.com/bibliotekanarynku9/" target="_blank")
                    img.contacts__facebook-picture.page-picture(src="images/facebook-icon.png" loading="lazy")
                a.contacts__link.contact-information__instagram-link.page-link(href="https://www.instagram.com/biblioteka_/" target="_blank")
                    img.contacts__instagram-picture.page-picture(src="images/instagram-icon.png" loading="lazy")
                a.contacts__link.contact-information__mail-link.page-link
                    img.contacts__instagram-picture.page-picture(src="images/mail-icon.png" loading="lazy")
                a.contacts__link.contact-information__skype-link.page-link
                    img.contacts__instagram-picture.page-picture(src="images/skype-icon.png" loading="lazy")
            span.contacts__mail-text bibliolviv9@gmail.com
            span.contacts__skype-text.contacts__skype-mail-text_invisible bibliolviv
            section.charity-details
                h2.charity-details__header
                    a.page-link(href="#charity-details") Допомогти бібліотеці
        div.google-map.footer-information__item.flex.flex-center
            div#google-map-frame
    section.taglines.flex
        div.taglines-key
            figure.taglines-key__wrapper.picture-wrapper.centered
                img.taglines-key__picture.page-picture(src="images/logo-key.png" alt="books row picture" loading="lazy")
                figcaption.taglines-key__picture-label.taglines-key__picture-label_style_default
                    a.page-link(href="https://www.facebook.com/artrakov?fref=hovercard" target="_blank") #artrakov
        div.taglines-secrets
            h2.taglines-secrets__text.page-header Тут живуть секрети...
        div.taglines-hashtag
            h2.taglines-hashtag__text.page-header #Бібліотека_на_Ринку_9
    figure.books-row-wrapper.picture-wrapper
        img.books-row.page-picture(src="images/books-row.png" alt="books row picture" loading="lazy")
